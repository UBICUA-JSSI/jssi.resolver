<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>connection</param-name>
        <param-value>blockcypherapi</param-value>
    </context-param>
    <context-param>
        <param-name>rpc.url.mainnet</param-name>
        <param-value/>
    </context-param>
    <context-param>
        <param-name>rpc.url.testnet</param-name>
        <param-value/>
    </context-param>
    <context-param>
        <param-name>rpc.url.certmainnet</param-name>
        <param-value/>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>jssi.resolver.servlet.ResolverListener</listener-class>
    </listener>
    <servlet-mapping>
        <servlet-name>javax.ws.rs.core.Application</servlet-name>
        <url-pattern>/1.0/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
